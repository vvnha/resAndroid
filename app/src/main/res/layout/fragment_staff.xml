<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/group_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vo Van Nha"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:gravity="center"/>
        <Button
            android:layout_margin="10dp"
            android:text="edit"
            android:id="@+id/btnEditInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/group_edit"
        android:id="@+id/infoUser"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtUserMail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="mail"/>

        <TextView
            android:id="@+id/txtUserPhone"
            android:layout_below="@+id/txtUserMail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="phone"/>

        <TextView
            android:id="@+id/txtUserPosi"
            android:layout_below="@id/txtUserPhone"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="position"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/infoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service"/>
    </RelativeLayout>

</RelativeLayout>